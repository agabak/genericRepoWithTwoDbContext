@model  ProductViewModel

    <div class="container">
        <div class="col-md-4 offset-md-4">
            <div asp-validation-summary="ModelOnly" class="alert-danger"></div>
            <h1>Create</h1>
            <form asp-action="Create" asp-controller="Product">
                <div class="form-group">
                    <label asp-for="ProductName"></label>
                    <input asp-for="ProductName" class="form-control" />
                    <span asp-validation-for="ProductName" class="alert-danger"></span>
                </div>
                <div class="form-group">
                   <label asp-for="UnitPrice"></label>
                    <input asp-for="UnitPrice"  class="form-control"/>
                    <span asp-validation-for="UnitPrice"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Package"></label>
                    <input asp-for="Package" class="form-control" />
                    <span asp-validation-for="Package"></span>
                </div>
                <div class="form-group">
                    <select asp-for="SupplierId" asp-items="@Model.Items" class="form-control"></select>
                </div>
             
                <div class="form-group">
                    <div class="form-check">
                        <input asp-for="IsDiscontinued" class="form-check-input" />
                        <label asp-for="IsDiscontinued" class="form-check-label"></label>
                    </div> 
                </div>
                <button type="submit" class="btn btn-success">Create</button>
            </form>
        </div>
    </div>